{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "typeRoots": ["./@types/**/*.d.ts", "./node_modules/@types/**/*.d.ts"],
  "files": ["node_modules/jest-extended/types/index.d.ts"],
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
